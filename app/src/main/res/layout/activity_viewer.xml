<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.george.bookmarker.activity.viewer.ViewerActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewer_text_view"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="冊"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/viewer_home_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ホームに戻る"/>

                <Button
                    android:id="@+id/viewer_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="戻す"/>

                <Button
                    android:id="@+id/viewer_tag_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="タグ別"/>

                <Button
                    android:id="@+id/viewer_author_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="著者別"/>

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewer_list_view">

        </ListView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
